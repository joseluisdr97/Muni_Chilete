
@{
    Layout = null;
}

<div class="container">
    <br />
    <br />
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <h2>Lista de requisitos</h2>
        </div>
        <div class="col-sm-4"></div>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Formato</th>
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td>@item.Precio</td>

                    <td>
                        @item.Formato
                        @foreach (var itemFormato in ViewBag.Formatos)
                        {
                            if (item.Formato == itemFormato.Nombre)
                            {
                                <a class="btn btn-warning" href="@itemFormato.Url" target="_blank" style="margin-left:20px">Descargar formato</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

