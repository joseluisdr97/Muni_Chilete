@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}
<br />
<br />
<br />
<br />
@foreach (var item in Model)
{

    <div class="container my-5 py-5 z-depth-1">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-md-6 mb-4 mb-md-0">

                    <h3 class="font-weight-bold">@item.Titulo</h3>

                    <p class="text-muted">
                        @item.Descripcion
                    </p>

                    @*<a class="btn btn-purple btn-md ml-0" href="#" role="button">Start now<i class="fa fa-gem ml-2"></i></a>*@

                </div>
                <!--Grid column-->
                <!--Grid column-->
                <div class="col-md-6 mb-4 mb-md-0">

                    <!--Image-->
                    <div class="view overlay z-depth-1-half">
                        <img src="@item.Imagen" style="width:400px;height:300px" class="img-fluid"
                             alt="">
                        <a href="#">
                            <div class="mask rgba-white-light"></div>
                        </a>
                    </div>

                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->


        </section>
        <!--Section: Content-->

        <hr />
        <br />
    </div>


}

<footer id="footer">
    <div class="footer-top">
        <div class="container">
            <div class="row">

                <div class="col-lg-4 col-md-6 footer-info">
                    <h4>HORARIOS DE ATENCIÓN</h4>
                    <p>LUNES A VIERNES</p>
                    <p>8:00 AM - 1:00 PM</p>
                    <p>3:00 PM - 6:00 PM</p>
                </div>



                <div class="col-lg-4 col-md-6 footer-contact">
                    <h4>CONTACTANOS</h4>
                    <p>
                        Jr. Ignacio Prado N° 128<br>

                        <strong>TELEFONO:</strong> 076 554113<br>

                    </p>
                </div>

                <div class="col-lg-3 col-md-6 footer-newsletter">
                    <div class="social-links">
                        <h4>REDES SOCIALES</h4>
                        <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</footer>


