
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper">
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-4">
                <div class="panel panel-primary">
                    <div class="panel-heading text-center"><h3>Editar formato</h3></div>
                    <div id="inputs" class="panel-body">

                        <form action="/Formato/Editar?id=@Model.Id_Formato" method="post">
                            <div>
                                <label class="control-label">Nombre :</label>
                                <input class="form-control" type="text" name="Nombre" value="@Model.Nombre" />
                                @Html.ValidationMessage("Nombre")
                            </div>
                            <div>
                                <label class="control-label">Url :</label>
                                <input class="form-control" type="text" name="Url" value="@Model.Url" />
                                @Html.ValidationMessage("Url")
                            </div>
                            <br />
                            <a class="pull-left btn btn-danger" href="/Formato/Index"><span class="glyphicon glyphicon-circle-arrow-left"></span>Volver</a>
                            <button id="btnGuardar" class="btn btn-primary pull-right"><span class="glyphicon glyphicon-saved"></span> Guardar</button>

                        </form>
                    </div>

                </div>
            </div>
        </div>


        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
    </div>
</div>
